<div class="chart" style="position: relative;">
  <svg></svg>
  <div class="popup hidden">
    <div id="artist">
      <p id="name">Artist Name</p>
      <p>
        <span id="wordiness">1,000,000</span>
        <span>unique words used</span>
      </p>
    </div>
  </div>
</div>


<div class="top-artists">
  <% @artists.each_with_index do |artist, i| %>
    <div class="artist">
      <%= artist.name %>
    </div>
  <% end %>
</div>