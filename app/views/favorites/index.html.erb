<div class="top-artists">
  <svg class="bubble-chart">

    <div class="bubbles">
      <% @artists.each_with_index do |artist, i| %>

          <div class="artist-bubble" id="bubble-<%= artist.id %>"
          style="
            background-image: url('http://poly-graph.co/css/aesop.png');
            /* background-image: url('<%= artist.image_discogs %>'); */
            left: <%= 87 - i * 80 / 50 %>%;
            top: 10%;
          ">
          </div>
      <% end %>
    </div>

    <div class="popups">
      <% @artists.each_with_index do |artist, i| %>
        <div class="popup hidden" id="popup-<%= artist.id %>">
          <p id="name"><%= artist.name %></p>
          <p>
            <span id="wordiness">1,000,000</span>
            <span>unique words used</span>
          </p>
        </div>
      <% end %>
    </div>

  </svg>
</div>