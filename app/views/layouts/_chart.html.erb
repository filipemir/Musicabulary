<div class="top-artists">

  <svg class="bubble-chart">
    <div class="bubbles">
      <% @artists.each_with_index do |artist, i| %>

        <div class="artist-bubble loading hidden" id="bubble-<%= artist.id %>"
        style="background-image: url('<%= artist.discogs_image %>');"
        >
        </div>
      <% end %>
    </div>

    <div class="popups">
      <% @artists.each_with_index do |artist, i| %>
        <div class="popup hidden" id="popup-<%= artist.id %>">
          <p class="name"><%= artist.name %></p>
          <p class="wordiness hidden">
            <span class=wordiness-number>1,000,000</span> unique words used
          <p>
          <div class="placeholder">
            Still looking through their lyrics. This may take a minute.
          </div>
        </div>
      <% end %>
    </div>
  </svg>

</div>
